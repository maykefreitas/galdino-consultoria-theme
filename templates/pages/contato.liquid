<div class="page contato-page">
  <div class="page-cover">
    <img src="{{ settings.view.quem_somos.cover }}"
         class="img-responsive"
         data-mobile="{{ settings.view.quem_somos.cover_mobile }}"
         alt="">
  </div>

  <div class="container page-container">
    <div class="row">
      <div class="col-sm-6">
        <div class="page-content">
          <div class="text">
            {{ page.content }}
          </div>
        </div>
      </div>
      <div class="col-sm-6">
        <div class="page-content">
          <h2>Contato</h2>
          <form action="#">
            <p>Para verificar a disponibilidade dos cursos entre em contato pelo formul√°rio abaixo:</p>
            <div class="form-group">
              <label for="name">Nome:</label>
              <input type="text" class="form-control" name="name" id="name">
            </div>
            <div class="form-group">
              <label for="name">E-mail:</label>
              <input type="email" class="form-control" name="email" id="email">
            </div>
            <div class="form-group">
              <label for="name">Telefone:</label>
              <input type="text" class="form-control" name="phone" id="phone">
            </div>
            <div class="form-group">
              <label for="name">Assunto:</label>
              <select class="form-control" name="subject" id="subject">
                <option>Selecione</option>
                <option>Item 1</option>
                <option>Item 2</option>
                <option>Item 3</option>
              </select>
            </div>
            <div class="form-group">
              <label for="name">Mensagem:</label>
              <textarea class="form-control" name="message" id="message" rows="8"></textarea>
            </div>
            <div class="form-group text-right">
              <button type="submit" class="btn btn-primary">Enviar</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
